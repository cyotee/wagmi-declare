{
  "name": "@daosys/wagmi-declare",
  "version": "0.1.0",
  "description": "Lightweight helpers and types to build UIs from contract-list schemas (framework-agnostic)",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "wagmi-declare": "./dist/cli.mjs"
  },
  "files": [
    "dist",
    "README.adoc",
    "docs",
    "examples"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "validate": "node ./dist/cli.mjs validate",
    "generate": "node ./dist/cli.mjs generate",
    "smoke:cli": "node ./dist/cli.mjs --help",
    "prepublishOnly": "npm run clean && npm run build && npm test && npm run smoke:cli"
  },
  "author": "indexedex",
  "license": "MIT",
  "peerDependencies": {
    "wagmi": "^3.0.0",
    "viem": "^2.0.0",
    "react": "^18.0.0"
  },
  "devDependencies": {
    "typescript": "^5.7.3",
    "tsup": "^8.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "vitest": "^4.0.16",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "jsdom": "^22.0.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "viem": "^2.0.0",
    "wagmi": "^3.0.0"
  }
}
